<!DOCTYPE html>
<html>
<head>
    <title>fishingBakersfield | Locations</title>
    <% include partials/header %>
    <% include partials/loginbar %>
      <div class="container">
        <% include partials/message %>
        <!-- TAB -->
        <div class="tabs is-centered">
          <ul>
            <li>
              <a href="/catches/1">
                <span class="icon is-medium"><i class="fas fa-rss"></i></span>
                <span>Feed</span>
              </a>
            </li>
            <li class="is-active">
              <a href="/locations">
                <span class="icon is-medium"><i class="fas fa-map-marker"></i></span>
                <span>Locations</span>
              </a>
            </li>
          </ul>
        </div>
        <!-- END TAB -->
        <!-- COLUMN TILES -->
        <div class="columns is-multiline is-centered">
          <% location.forEach(function(location){ %>
            <div class="column is-6 is-pulled-left">
              <div class="box">
                <!-- LOCATION NAME -->
                <p><i class="fas fa-map-marker">&nbsp;</i>
                  <strong><%= location.name %></strong></p>
                <!-- CATCH NUMBER -->
                <p><i class="fas fa-tags">&nbsp;</i>
	                 <% if(location.catches.length == 0){ %>
	                    <em>No catches</em>
	                 <% } %>
	                 <% if(location.catches.length == 1){ %>
	                    <em>1 catch</em>
	                 <% } %>
	                 <% if(location.catches.length > 1){ %>
	                    <em><%= location.catches.length %> catches</em>
	                 <% } %>
                <!-- LOCATION CONTENT -->
                <article class="media">
                  <div class="media-left">
                    <figure class="image is-128x128">
                      <img src="<%= location.thumbnail %>" alt="<%= location.name %>">
                    </figure>
                  </div>
                  <div class="media content">
                    <div class="content">
                      <p><%- location.description.substring(0, 90) + "..." %></p>
                    </div>
                  </div>
                </article>
                <br>
                <!-- LOCATION BUTTONS -->
                <a class="button" href="http://www.google.com/maps/place/<%= location.gps %>">
                  <img src="/icons/map.svg" class="svg-icon-small">Maps
                </a>
                <a href="/locations/<%= location._id %>" class="button" style="float: right;">Read More
                  <img src="/icons/arrow-right.svg" class="svg-icon-small">
                </a>
              </div>
            </div>
         <% }) %>
       </div>
       <!-- ADD LOCATION BUTTON -->
       <% if(currentUser && currentUser.isAdmin){ %>
         <br>
         <a style="width: 100%" class="button is-success" href="/locations/add">
           <img src="/icons/plus-white.svg" class="svg-icon-small" />Add Location
         </a>
       <% } %>
     </div>
<% include partials/footer %>
